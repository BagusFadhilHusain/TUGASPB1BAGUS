<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="WARKOP INDOMIE WAGYU"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indomie Goreng     : "
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etMie1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga 10.000"
            android:inputType="number"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indomie Kuah        : "
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etMie2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga 10.000"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indomie seblak      : "
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etMie3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga 12.000"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indomie Wagyu      :"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etMie4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga 500.000"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teh Es    :"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etTeh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga 5.000"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kopi        :"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etKopi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga 5.000"
            android:inputType="number"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMembership"
        android:text="PILIH MEMBERSHIP"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/rgGroup"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="None"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rbBronze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bronze"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rbSilver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silver"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rbGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold"
            android:textColor="#000000" />



        <RadioButton
            android:id="@+id/rbPlatinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platinum"
            android:textColor="#000000" />
    </RadioGroup>

    <Button
        android:id="@+id/btnPesan"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:backgroundTint="#958E8E"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Harga : "
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>
